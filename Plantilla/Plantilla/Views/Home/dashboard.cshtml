
@{
    ViewBag.Title = "dashboard";
}
<script>
    $(document).ready(function () {
        $("#btnTienda").click(function () {
            $("#contenido").load('@Url.Action("tienda","home")');
        });
        $("#btnProducto").click(function () {
            $("#contenido").load('@Url.Action("producto","home")');
        });
        $("#btnVenta").click(function () {
            $("#contenido").load('@Url.Action("ventas","home")');
        });
    });
</script>
<br />
<br />  
<div class="text-center">
    <h2>dashboard</h2>
</div>
<br/>  
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-4">
            <div>
                <div class="card" id="btnTienda">
                    <div class="card-body">Tiendas</div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card" id="btnProducto">
                <div class="card-body">Productos</div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card" id="btnVenta">
                <div class="card-body">Ventas</div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header text-danger">
                    <h3>Contenido</h3>
                </div>
                <div class="card-body">
                    <div class="container" id="contenido">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
